---
const date = new Date().toISOString().slice(5, 10);
const footers = [
  "foxboy is just a meaning of life",
  "not a furry I swear",
  "mismatched eyes are just beautiful",
  "inspired by cynthia.dev",
  "thjsdsgqkhqgsdlhksdgj? yes",
  "Made by Hardel with ❤️"
];

const special: {[ date: string ]: string} = {
  "01-01": "🎉 happy new year 🎉",
  "07-14": "🇫🇷 happy french national day 🇫🇷",
  "09-18": "🎂 yay cake day 🎂",
  "12-25": "🎄 merry christmas 🎄",
};

const quote =
  date in special
    ? special[date]
    : footers[Math.floor(Math.random() * footers.length)];
