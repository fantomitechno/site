---
import quotes from "../data/quotes.json";

const date = new Date().toISOString().slice(5, 10);
const quote =
  date in quotes.special
    ? quotes.special[date as keyof typeof quotes.special]
    : quotes.classic[(Math.random() * quotes.classic.length) | 0];
---

<footer>
  <div class="footer-links">
    <span>
      <a
        href="https://github.com/fantomitechno/site"
        target="_blank"
        rel="noreferrer"
      >
        source
      </a></span
    >
    <div class="separator"></div>
    <span>
      <a
        href="https://ko-fi.com/fantomitechno"
        target="_blank"
        rel="noreferrer"
      >
        ko-fi
      </a></span
    >
  </div>
  {
    quote?.includes("cynthia.dev") ? (
      <a class="footer-comment" href="https://cynthia.dev">
        {quote}
      </a>
    ) : (
      <div class="footer-comment">{quote}</div>
    )
  }
</footer>

<style>
  footer {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 6px;
    margin-top: auto;
    padding: 2rem 16px 16px;
  }

  .footer-links {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    font-size: 0.9em;
  }

  .footer-comment {
    font-size: 0.75em;
    text-align: center;
  }

  .separator {
    width: 3px;
    height: 3px;
    border-radius: 50%;
    background-color: #000;
    margin-top: 2px;
  }

  @media (prefers-color-scheme: dark) {
    .separator {
      background-color: #cfcfcf;
    }
  }
</style>
